name:           GPipe-Core
version:        0.1
cabal-version:  >= 1.8
build-type:     Simple
author:         Tobias Bexelius

library
  hs-source-dirs:  src
  build-depends:   
                   base >= 4,
                   transformers,
                   exception-transformers,
                   containers,
                   text >= 0.11.2,
                   Boolean == 0.2.1
  ghc-options:     -Wall
  exposed-modules: 
                   Data.SNMap,
                   Graphics.GPipe.Buffer,
                   Graphics.GPipe.Context,
                   Graphics.GPipe.Format,
                   Graphics.GPipe.FragmentStream,
                   Graphics.GPipe.Frame,
                   Graphics.GPipe.GeometryStream,
                   Graphics.GPipe.IndexArray,
                   Graphics.GPipe.Shader,
                   Graphics.GPipe.Shader.Operations,
                   Graphics.GPipe.Stream,
                   Graphics.GPipe.Texture,
                   Graphics.GPipe.Uniform,
                   Graphics.GPipe.VertexArray,
                   Graphics.GPipe.VertexStream

